<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
        ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %replace(%msg){'[\r\n]', ''}%n</pattern>
        </encoder>
    </appender>
    <logger name="exec" level="STDOUT" />
    <logger name="com.quorum.tessera.reflect.ReflectCallback" level="OFF" />
    <logger name="com.quorum.tessera.config.util.XmlProcessingCallback" level="OFF" />
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
